{
  "name": "harsreader",
  "version": "1.0.0",
  "description": "Electron & Vue.js Boilerplate App",
  "author": "Sohel Amin",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "webpack-dev-server": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --port 3000",
    "electron": "cross-env NODE_ENV=development electron ./",
    "server": "cross-env NODE_ENV=development node ./server/runner.js",
    "dev": "concurrently --kill-others \"npm run webpack-dev-server\" \"npm run electron\"",
    "build": "cross-env NODE_ENV=production webpack --progress --profile --colors",
    "start": "cross-env NODE_ENV=production electron ./",
    "package": "npm run build; npm run package-osx; npm run package-win; npm run package-linux;",
    "package-osx": "electron-packager ./ --platform=darwin --arch=x64 --icon=assets/app.icns --out=package --asar=true --overwrite=force",
    "package-win": "electron-packager ./ --platform=win32 --arch=ia32 --icon=assets/app.ico --out=package --asar=true --overwrite=force",
    "package-linux": "electron-packager ./ --platform=linux --arch=ia32 --icon=assets/app.ico --out=package --asar=true --overwrite=force"
  },
  "dependencies": {
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "electron": "^1.6.10",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "http-proxy-middleware": "^0.17.4",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "pouchdb": "^6.3.0",
    "pouchdb-find": "^6.3.2",
    "vue": "^2.3.4",
    "vue-resource": "^1.3.4",
    "vue-router": "^2.5.3"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "electron-packager": "^8.7.1",
    "electron-reload": "^1.2.1",
    "file-loader": "^0.11.2",
    "less": "^2.7.2",
    "less-loader": "^4.0.4",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.18.2",
    "vue-loader": "^12.2.1",
    "vue-template-compiler": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.2"
  }
}
